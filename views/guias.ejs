<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guías de TFT</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <header>
        <div class="header-content">
            <nav class="main-nav">
                <ul class="menu">
                    <li><a href="/index.html">Inicio</a></li>
                    <li><a href="/noticias.html">Noticias</a></li>
                    <li><a href="/compos.html">Compos</a></li>
                    <li><a href="/guias">Guías</a></li>
                    <li><a href="/redes.html">Redes</a></li>
                </ul>
            </nav>
            <div class="logo-titulo">
                <img src="/logo.png" alt="Logo TFTHub" class="logo">
            </div>
        </div>
    </header>

    <main>
        <section class="guides-section">
            <h1>Guías de TFT</h1>
            <div class="guides-container">
                <% guides.forEach(guide => { 
                    // Extraer el videoID de la URL
                    const videoID = new URL(guide.videoURL).searchParams.get('v'); %>
                    <div class="guide-card">
                        <a href="<%= guide.videoURL %>" target="_blank" class="guide-thumbnail">
                            <img src="https://img.youtube.com/vi/<%= videoID %>/0.jpg" alt="Miniatura de <%= guide.nombre %>">
                        </a>
                        <div class="guide-info">
                            <h2><%= guide.nombre %></h2>
                            <p><%= guide.descripcion %></p>
                            <a href="<%= guide.videoURL %>" target="_blank" class="view-button">Ver Guía</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <footer>
        <div class="footer-container">
            <p>&copy; 2024 TFTHub. Todos los derechos reservados.</p>
        </div>
    </footer>
</body>
</html>
