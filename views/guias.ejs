<!DOCTYPE html>
<html lang="es" data-ejs>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guías de TFT - TFTHub</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <header>
        <nav>
            <ul class="menu">
                <li><a href="/">Inicio</a></li>
                <li><a href="/noticias">Noticias</a></li>
                <li><a href="/compos">Compos</a></li>
                <li><a href="/guias" class="active">Guías</a></li>
                <li><a href="/redes">Redes</a></li>
            </ul>
        </nav>
        <div class="logo-titulo">
            <img src="/logo.png" alt="Logo TFTHub" class="logo">
            <h1>TFTHub</h1>
        </div>
    </header>

    <main>
        <section id="guias">
            <h2>Guías de TFT</h2>
            <div class="guides-container">
                <% guides.forEach(guide => { 
                    const videoID = new URL(guide.videoURL).searchParams.get('v'); %>
                    <div class="guide-card">
                        <a href="<%= guide.videoURL %>" target="_blank" rel="noopener noreferrer" class="guide-thumbnail">
                            <img src="https://img.youtube.com/vi/<%= videoID %>/0.jpg" alt="Miniatura de <%= guide.nombre %>">
                        </a>
                        <div class="guide-info">
                            <h3><%= guide.nombre %></h3>
                            <p><%= guide.descripcion %></p>
                            <a href="<%= guide.videoURL %>" target="_blank" rel="noopener noreferrer" class="btn view-button">Ver Guía</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 TFTHub. Todos los derechos reservados.</p>
    </footer>
</body>
</html>